{
    "private": true,
    "scripts": {
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production && mix --production --mix-config=webpack.ssr.mix.js",
        "ssr": "node -r esm public/js/ssr.js"
    },
    "devDependencies": {
        "@inertiajs/vue3": "^1.1.0",
        "laravel-mix": "^6.0.49",
        "vue": "^3.4.0",
        "vue-loader": "^16.8.3"
    }
}
